generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id @default(uuid())
  name  String
  email String
  password String
  chats chatmember[]
  messages message[]
}

model chat {
  id String @id @default(uuid())
  isGroup Boolean @default(false)
  name String
  members chatmember[]
  messages message[]
}

model chatmember {
  id String @id @default(uuid())
  userId String
  chatId String
  user User @relation(fields: [userId],references: [id])
  chat chat @relation(fields: [chatId],references: [id])
}

model message {
  id String @id @default(uuid())
  time DateTime @default(now())
  userId String
  user User @relation(fields: [userId],references: [id])
  chatId String
  chat chat @relation(fields: [chatId],references: [id])
}
